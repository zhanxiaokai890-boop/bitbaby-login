{
  "version": 2,
  "buildCommand": "pnpm run build",
  "outputDirectory": "dist",
  "env": {
    "NODE_ENV": "production"
  },
  "installCommand": "pnpm install --frozen-lockfile",
  "framework": "other",
  "functions": {
    "dist/index.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/dist/index.js"
    },
    {
      "source": "/:path*",
      "destination": "/dist/public/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/dist/public/index.html"
    }
  ],
  "headers": [
    {
      "source": "/dist/public/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
