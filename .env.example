# Database Configuration
# MySQL/TiDB connection string
# Format: mysql://user:password@host:port/database
DATABASE_URL=mysql://root:password@localhost:3306/bitbaby_login

# Authentication & Security
# Secret key for JWT token signing (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# Admin Configuration
# Admin key for accessing admin dashboard
ADMIN_KEY=admin123

# OAuth Configuration (if using OAuth)
OAUTH_SERVER_URL=https://oauth.example.com
VITE_APP_ID=your_app_id_here

# Owner Configuration
# OpenID of the owner/admin user
OWNER_OPEN_ID=owner_open_id_here

# Forge API Configuration (optional)
BUILT_IN_FORGE_API_URL=https://api.example.com
BUILT_IN_FORGE_API_KEY=your_api_key_here

# Environment
# Set to 'production' for production deployment
NODE_ENV=development
